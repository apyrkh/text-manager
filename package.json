{
  "name": "text-manager",
  "version": "1.0.0",
  "description": "Lightweight extensible text manager allows to manage texts, e.g. localize texts in web app",
  "main": "dist/TextManager.js",
  "scripts": {
    "lint": "tslint --project .",
    "build": "rimraf dist && tsc",
    "cover": "istanbul cover node_modules/mocha/bin/_mocha -- -r esm test/**/*.js - - -R spec",
    "ci": "npm run lint && npm run build && npm run cover",
    "docs": "typedoc --out docs src && touch ./docs/.nojekyll",
    "gh-pages": "rimraf docs && npm run docs && gh-pages -d docs -t",
    "test": "mocha -r esm test/**/*.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apyrkh/text-manager.git"
  },
  "keywords": [
    "lightweight",
    "localization",
    "text manager"
  ],
  "author": "Aliaksandr Pyrkh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/apyrkh/text-manager/issues"
  },
  "homepage": "https://github.com/apyrkh/text-manager#readme",
  "devDependencies": {
    "@types/chai": "4.2.4",
    "@types/istanbul": "0.4.30",
    "@types/mocha": "5.2.7",
    "@types/node": "12.11.7",
    "chai": "4.2.0",
    "coveralls": "3.0.7",
    "esm": "3.2.25",
    "gh-pages": "2.1.1",
    "istanbul": "0.4.5",
    "mocha": "6.2.2",
    "rimraf": "3.0.0",
    "tslint": "5.20.0",
    "typedoc": "0.15.0",
    "typescript": "3.6.4"
  }
}
